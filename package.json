{
  "name": "backend-enginner-test",
  "version": "1.0.0",
  "description": "REST API with authentication, external service integration, and data persistence",
  "keywords": [
    "ts, node, express, sqlite, api, rest, login, logout, maps, test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SaimonXX"
  },
  "license": "ISC",
  "author": "SaimonXX",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev1": "ts-node-dev --respawn --loader ts-node/esm --transpile-only src/server.ts",
    "dev2": "nodemon --ext ts,json -r tsconfig-paths/register --exec ts-node src/server.ts",
    "dev-docker": "nodemon --legacy-watch --ext ts,json --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc && tsc-alias",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.jest.json"
      ]
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "22.14.0",
    "@types/sqlite3": "3.1.11",
    "@types/supertest": "6.0.3",
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "supertest": "7.1.0",
    "ts-jest": "29.3.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.2",
    "tsc-alias": "1.8.14",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "5.1.0",
    "jsonwebtoken": "9.0.2",
    "sqlite": "5.1.1",
    "sqlite3": "5.1.7",
    "zod": "3.24.2"
  }
}
